<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reviews & Enquiries</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .review-card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
      background-color: white;
    }
    .timestamp {
      font-size: 0.9em;
      color: #777;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('navbar'); %>
  <div class="container mt-4">
    <h2 class="mb-4">üìù Reviews & Enquiries</h2>

    <!-- Flash messages -->
    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %><p><%= msg %></p><% }) %>
      </div>
    <% } %>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(err => { %><p><%= err %></p><% }) %>
      </div>
    <% } %>

    <!-- Submit review form -->
    <div class="card p-3 mb-4">
      <form action="/reviews" method="POST">
        <div class="mb-3">
          <label for="message" class="form-label">Write your review or enquiry:</label>
          <textarea name="message" id="message" rows="4" class="form-control" required></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>

    <!-- Show existing reviews -->
    <% if (reviews.length === 0) { %>
      <p class="text-muted">No reviews submitted yet.</p>
    <% } else { %>
      <% reviews.forEach(review => { %>
        <div class="review-card">
          <strong><%= review.username %></strong>
          <div class="timestamp"><%= new Date(review.created_at).toLocaleString() %></div>
          <p><%= review.message %></p>
        </div>
      <% }) %>
    <% } %>

    <a href="/cars" class="btn btn-outline-secondary mt-4">‚Üê Back to Cars</a>
  </div>
</body>
</html>
