<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Add New Car</title>
</head>
<body>
  <%- include('navbar'); %>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Add New Car</h2>

    <form action="/add-car" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">
      <!-- Car Model -->
      <div class="mb-3">
        <label for="car_model" class="form-label">Car Model:</label>
        <input type="text" id="car_model" name="car_model" class="form-control" required>
      </div>

      <!-- Car Type -->
      <div class="mb-3">
        <label for="car_type" class="form-label">Car Type:</label>
        <select id="car_type" name="car_type" class="form-select" required>
          <option value="Sedan">Sedan</option>
          <option value="SUV">SUV</option>
          <option value="Hatchback">Hatchback</option>
          <option value="MPV">MPV</option>
          <option value="Truck">Truck</option>
        </select>
      </div>

      <!-- Rental Rate -->
      <div class="mb-3">
        <label for="rental_rate" class="form-label">Rental Rate (SGD):</label>
        <input type="number" id="rental_rate" name="rental_rate" class="form-control" min="0" step="0.01" required>
      </div>

      <!-- Rental Term -->
      <div class="mb-3">
        <label for="rental_term" class="form-label">Rental Term:</label>
        <select id="rental_term" name="rental_term" class="form-select" required>
          <option value="hour">Per Hour</option>
          <option value="day">Per Day</option>
          <option value="week">Per Week</option>
        </select>
      </div>

      <!-- Availability -->
      <div class="mb-3">
        <label for="availability" class="form-label">Availability:</label>
        <select id="availability" name="availability" class="form-select">
          <option value="1">Available</option>
          <option value="0">Not Available</option>
        </select>
      </div>

      <!-- Available From/To Dates -->
      <div class="mb-3">
        <label for="available_from" class="form-label">Available From:</label>
        <input type="date" id="available_from" name="available_from" class="form-control">
      </div>

      <div class="mb-3">
        <label for="available_to" class="form-label">Available Until:</label>
        <input type="date" id="available_to" name="available_to" class="form-control">
      </div>

      <!-- Pickup Location -->
      <div class="mb-3">
        <label for="pickup_location" class="form-label">Pickup Location:</label>
        <input type="text" id="pickup_location" name="pickup_location" class="form-control">
      </div>

      <!-- Optional: Upload Image -->
      <div class="mb-4">
        <label for="image" class="form-label">Car Image:</label>
        <input type="file" id="image" name="image" accept="image/*" class="form-control">
      </div>

      <div class="d-grid">
        <button class="btn btn-primary" type="submit">Add Car</button>
      </div>
    </form>
  </div>
</body>
</html>
