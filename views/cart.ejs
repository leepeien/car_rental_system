<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Rental Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .car-img {
      width: 100px;
      height: auto;
    }
  </style>
</head>
<body class="bg-light">

  <%- include('navbar'); %>

  <div class="container mt-5">
    <h2 class="mb-4">üõí My Rental Cart</h2>
    <p>Welcome, <strong><%= user.username %></strong>!</p>

    <% if (cart && cart.length > 0) { %>
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>Image</th>
            <th>Car</th>
            <th>Rate/Day</th>
            <th>Days</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; %>
          <% cart.forEach((item, i) => {
              let total = item.rental_rate * item.days;
              grandTotal += total;
          %>
            <tr>
              <td><img src="/images/<%= item.image %>" class="car-img" alt="Car Image"></td>
              <td><strong><%= item.brand %></strong><br><%= item.car_model %></td>
              <td>$<%= item.rental_rate.toFixed(2) %></td>
              <td><%= item.days %></td>
              <td>$<%= total.toFixed(2) %></td>
              <td>
                <form action="/cart/remove/<%= i %>" method="POST">
                  <button class="btn btn-sm btn-danger">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4" class="text-end fw-bold">Grand Total</td>
            <td class="fw-bold">$<%= grandTotal.toFixed(2) %></td>
            <td></td>
          </tr>
        </tfoot>
      </table>

      <form action="/checkout" method="POST">
        <button class="btn btn-success">‚úÖ Proceed to Checkout</button>
      </form>
    <% } else { %>
      <div class="alert alert-info">Your cart is empty. Go browse some cars!</div>
    <% } %>

    <a href="/cars" class="btn btn-outline-secondary mt-3">‚Üê Back to Browse Cars</a>
  </div>
</body>
</html>
